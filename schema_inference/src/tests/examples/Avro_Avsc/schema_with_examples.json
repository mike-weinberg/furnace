      "primitiveType": {
        "title": "Primitive Type",
        "description": "Basic type primitives.",
        "type": "string",
        "enum": [
          "null",
          "boolean",
          "int",
          "long",
          "float",
          "double",
          "bytes",
          "string"
        ]
      },
      "primitiveTypeWithMetadata": {
